FROM neo4j:3.5.3
#
# Neo4j Version
#                        3.5.3
#
# Latest version: 4.4.2

ARG CEDAR_NEO4J_USER_NAME
ARG CEDAR_NEO4J_USER_PASSWORD

ARG NEO4J_CERTS
ENV NEO4J_CERTS ${NEO4J_CERTS}

EXPOSE 7474
EXPOSE 7687

ENV NEO4J_AUTH=${CEDAR_NEO4J_USER_NAME}/${CEDAR_NEO4J_USER_PASSWORD}

ENV NEO4J_SCRIPTS_DIR /opt/neo4j/scripts
ADD scripts ${NEO4J_SCRIPTS_DIR}

ENTRYPOINT ${NEO4J_SCRIPTS_DIR}/docker-entrypoint.sh neo4j
